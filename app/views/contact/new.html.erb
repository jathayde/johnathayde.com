<% set_meta_tags title: "Say Hello to John",
                 og: {
                   title: "Say Hello to John",
                 } %>


<% content_for :page_title do %>
  Contact Us
<% end %>

<% content_for :meta_description do %>
<% end %>

<% content_for :body_class do %>contact<% end %>

<h1>Reach out and say hello!</h1>

<%= form_for @message, :url => contact_path do |form| %>
  <fieldset class="fields">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>
    <div class="field">
      <%= form.label :subject %>
      <%= form.text_field :subject %>
    </div>

    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body, :rows => 10, :cols => 60 %>
    </div>

    <%= recaptcha_v3(action: 'new', site_key: ENV['RECAPTCHA_SITE_KEY']) %>

  </fieldset>

  <fieldset class="actions">
    <%= form.submit "Send" %>
  </fieldset>
<% end %>
